@model TechStoreWebApp_.Models.Product

<h1>Detalles del Producto</h1>

<div class="mb-3">
    <strong>Id:</strong> @Model.Id
</div>
<div class="mb-3">
    <strong>Nombre:</strong> @Model.Name
</div>
<div class="mb-3">
    <strong>Precio:</strong> @Model.Price.ToString("C")
</div>

<a href="/Products/Edit/@Model.Id" class="btn btn-warning">Editar</a>
<a href="/Products/Delete/@Model.Id" class="btn btn-danger">Eliminar</a>
<a href="/Products" class="btn btn-secondary">Volver</a>
